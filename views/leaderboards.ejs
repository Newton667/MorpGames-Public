<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Leaderboard</title>
    <style>
        body {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
            min-height: 100vh;
            margin: 0;
            user-select: none;
            background-image: url('Pictures/LeaderBoardBackground.png');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            font-family: Arial, sans-serif;
            color: black;
            overflow-x: hidden;
        }

        h1 {
            text-align: center;
            color: white;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
            margin-top: 20px;
            font-size: calc(2vw + 2vh);
        }

        table {
            width: 80%;
            max-width: 900px;
            border-collapse: collapse;
            margin: 20px 0;
            background-color: rgba(255, 255, 255, 0.8);
            padding: 10px;
            border-radius: 10px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
            font-size: calc(0.8vw + 0.8vh);
        }

        th {
            background-color: #f2f2f2;
        }

        .morphou-header {
            background-color: rgb(70, 223, 70);
            color: white;
            font-size: calc(1vw + 1vh);
        }
        .morpRogue-header {
            background-color: rgba(193, 17, 216, 0.793);
            color: white;
            font-size: calc(1vw + 1vh);
        }
        .sudoku-header {
            background-color: rgb(250, 168, 5);
            color: white;
            font-size: calc(1vw + 1vh);
        }
        .slider-header {
            background-color: rgb(205, 13, 35);
            color: white;
            font-size: calc(1vw + 1vh);
        }
        .platformer-header {
            background-color: rgb(13, 173, 205);
            color: white;
            font-size: calc(1vw + 1vh);
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        table + table {
            margin-top: 30px;
        }

        .content-container {
            width: 100%;
            padding: 20px;
            box-sizing: border-box;
            max-width: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
    </style>
</head>
<body>

    <h1>Leaderboard</h1>
    
    <div class="content-container">
        <table>
            <thead>
                <tr>
                    <th colspan="2" class="morphou-header">Morphou</th>
                </tr>
                <tr>
                    <th>Name</th>
                    <th>Score</th>
                </tr>
            </thead>
            <tbody>
                <% timScores.forEach(score => { %>
                    <tr>
                        <td><%= score.name %></td>
                        <td><%= score.score %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <table>
            <thead>
                <tr>
                    <th colspan="2" class="morpRogue-header">Morp Rogue</th>
                </tr>
                <tr>
                    <th>Name</th>
                    <th>Score</th>
                </tr>
            </thead>
            <tbody>
                <% newtonScores.forEach(score => { %>
                    <tr>
                        <td><%= score.name %></td>
                        <td><%= score.score %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <table>
            <thead>
                <tr>
                    <th colspan="2" class="sudoku-header">Sudoku</th>
                </tr>
                <tr>
                    <th>Name</th>
                    <th>Score</th>
                </tr>
            </thead>
            <tbody>
                <% gabeScores.forEach(score => { %>
                    <tr>
                        <td><%= score.name %></td>
                        <td><%= score.score %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <table>
            <thead>
                <tr>
                    <th colspan="2" class="slider-header">Slider Game</th>
                </tr>
                <tr>
                    <th>Name</th>
                    <th>Score</th>
                </tr>
            </thead>
            <tbody>
                <% jesseScores.forEach(score => { %>
                    <tr>
                        <td><%= score.name %></td>
                        <td><%= score.score %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <table>
            <thead>
                <tr>
                    <th colspan="2" class="platformer-header">Platformer Game</th>
                </tr>
                <tr>
                    <th>Name</th>
                    <th>Score</th>
                </tr>
            </thead>
            <tbody>
                <% natalyScores.forEach(score => { %>
                    <tr>
                        <td><%= score.name %></td>
                        <td><%= score.score %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

</body>
</html>
